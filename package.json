{
  "name": "switchback",
  "type": "module",
  "description": "Implementation of the game commonly known as Quoridor",
  "private": true,
  "homepage": "https://github.com/pspeter3/switchback#readme",
  "bugs": {
    "url": "https://github.com/pspeter3/switchback/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/switchback.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "fix": "wireit",
    "test": "wireit",
    "fix:format": "wireit",
    "test:format": "wireit",
    "test:types": "wireit"
  },
  "dependencies": {
    "preact": "^10.27.2",
    "wouter-preact": "^3.7.1"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "wireit": "^0.14.12"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "wireit": {
    "fix": {
      "dependencies": [
        "fix:format"
      ]
    },
    "fix:format": {
      "command": "prettier --cache --write '*.{html,md}' 'src/**/*'"
    },
    "test": {
      "dependencies": [
        "test:format",
        "test:types"
      ]
    },
    "test:format": {
      "command": "prettier --cache --check '*.{html,md}' 'src/**/*'",
      "files": [
        "*.{html,md}",
        "src/**/*"
      ]
    },
    "test:types": {
      "command": "tsc --noEmit",
      "files": [
        "tsconfig.json",
        "src/**/*.{ts,tsx}"
      ],
      "output": [
        "tsconfig.tsbuildinfo"
      ],
      "clean": false
    }
  }
}
