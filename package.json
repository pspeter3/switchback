{
  "name": "switchback",
  "type": "module",
  "description": "Implementation of the game commonly known as Quoridor",
  "private": true,
  "homepage": "https://github.com/pspeter3/switchback#readme",
  "bugs": {
    "url": "https://github.com/pspeter3/switchback/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/switchback.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "fix": "wireit",
    "test": "wireit",
    "fix:format": "wireit",
    "fix:lint": "wireit",
    "test:format": "wireit",
    "test:lint": "wireit",
    "test:spec": "wireit",
    "test:types": "wireit"
  },
  "dependencies": {
    "preact": "^10.27.2",
    "wouter-preact": "^3.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/preact": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.10",
    "vitest": "^3.2.4",
    "wireit": "^0.14.12"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ]
  },
  "wireit": {
    "fix": {
      "dependencies": [
        "fix:format",
        "fix:lint"
      ]
    },
    "fix:format": {
      "command": "prettier --cache --write '*.{html,md,ts}' 'src/**/*'"
    },
    "fix:lint": {
      "command": "eslint --cache --fix --flag unstable_native_nodejs_ts_config 'src/**/*'"
    },
    "test": {
      "dependencies": [
        "test:format",
        "test:lint",
        "test:types"
      ]
    },
    "test:format": {
      "command": "prettier --cache --check '*.{html,md,ts}' 'src/**/*'",
      "files": [
        "*.{html,md,ts}",
        "src/**/*"
      ],
      "output": []
    },
    "test:lint": {
      "command": "eslint --cache --flag unstable_native_nodejs_ts_config 'src/**/*'",
      "files": [
        "eslint.config.ts",
        "src/**/*.{ts,tsx}"
      ],
      "output": []
    },
    "test:spec": {
      "command": "vitest",
      "files": [
        "vite.config.ts",
        "src/**/*.{ts,tsx}"
      ],
      "output": [
        "coverage/**/*"
      ]
    },
    "test:types": {
      "command": "tsc --noEmit",
      "files": [
        "tsconfig.json",
        "*.ts",
        "src/**/*.{ts,tsx}"
      ],
      "output": [
        "tsconfig.tsbuildinfo"
      ],
      "clean": false
    }
  }
}
